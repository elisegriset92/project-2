<div class="container ">
  <div class="row">
    <br>

    <div class='col' align="center">
      <h1>LOGIN</h1>
      <br>
      <br>

      <a href="/auth/google/login" class="btn-lg btn-danger">Login with Google</a>
      <br>
      <br>
    </div>

    <div class='col'>

      <form action="/auth/login" method="POST" id="form-container" class="login">
        <div class="" align="center">
          
          <label><b>Email</b></label>
          <input class="form-control col-8" type="text" name="username" placeholder="Your Email">

          <br>
          <br>

          <label for="password"><b>Password</b></label>
          <input id="password" class="form-control col-8" type="password" name="password" placeholder="Your Password">
          <br> {{#if message }}
          <div class="error-message">{{ message }}</div>
          {{/if}}

          <button class=" btn-lg btn-primary">Login</button>

          <small id="emailHelp" class="form-text text-muted account-message">
            <br>
            Don't have an account yet?
            <a href="/auth/signup">Signup</a>
          </small>
      </form>
      </div>
    </div>
  </div>
</div>