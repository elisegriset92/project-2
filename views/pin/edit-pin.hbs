<div class="container ">
  <div class="row">
    <br>
    <div class='col'>
      <h4>MY PINS</h4>
          <a href="/add/pin/{{place._id}}">
        <button class="btn-lg btn-primary">Add a pin</button>
      </a>
    </div>

    <div class='col'>

      {{#each pinList}}
      <ul>
        <li class="list-group-item">
          <h2>{{this.comment}}</h2>
          <p>{{this.username}}</p>
          <img src="{{this.imageUrl}}" width="200px">
          <p>{{this.createdAt}}</p>
          <a href="/pin/{{this._id}}/delete">
            <button class="btn-sm btn-primary">Delete Pin</button>
          </a>
        </li>
        <br> {{/each}}
      </ul>