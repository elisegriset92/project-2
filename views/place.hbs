<h2>Add a Place</h2>

<form action="/process-add" method="POST">
  <label>
    Name :
    <input type="text" name="name" placeholder="Name of the place">
  </label>
  <br>

  <label>
    Description :
    <textarea name="description" placeholder="Description of the place"></textarea>
  </label>
  <br>

  <label>
    Latitude :
    <input type="text" name="latitude" placeholder="Lat">
  </label>
  <br>

  <label>
    Longitude :
    <input type="text" name="longitude" placeholder="Lng">
  </label>
  <br>
  <button class="btn">SAVE THIS RESTAURANT</button>
</form>